.block
  .row-fluid id="product_#{@product.id}"
    .span3= @product.name
    .span6= @product.description
.row-fluid#comments
  = form_for @review, url: product_reviews_path(@product) do |f|
    = f.label :review
    = f.text_area :body, rows: 4, class: "span8"
    = f.hidden_field :user_id, value: current_user.id
    p
      = f.submit "Leave comment", class: "btn"
.row-fluid
  = render partial: "form_review", collection: @reviews, as: :review
p= link_to t('.back'), admin_root_path